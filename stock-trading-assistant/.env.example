# Stock Trading Assistant Configuration
# Copy this file to .env and fill in your values

# ===========================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ===========================================
# Your Gmail address
EMAIL_SENDER=your-email@gmail.com

# Gmail App Password (NOT your regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=your-app-password-here

# Email to receive recommendations
EMAIL_RECIPIENT=your-email@gmail.com

# ===========================================
# MARKET DATA APIs (Optional - defaults work)
# ===========================================
# Alpha Vantage API Key (free at alphavantage.co)
ALPHA_VANTAGE_API_KEY=demo

# Finnhub API Key (free at finnhub.io) - for news sentiment
FINNHUB_API_KEY=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Secret key for session security (generate a random string)
SECRET_KEY=change-this-to-a-random-string-in-production

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///./data/trading.db

# Timezone for the user (Europe/Zurich for Switzerland)
USER_TIMEZONE=Europe/Zurich

# Base currency
BASE_CURRENCY=CHF

# ===========================================
# RECOMMENDATION SETTINGS
# ===========================================
# Maximum recommendations per day
MAX_DAILY_RECOMMENDATIONS=3

# Quiet hours (no recommendations sent during these hours)
QUIET_HOURS_START=23
QUIET_HOURS_END=7

# System active (set to false to pause recommendations)
SYSTEM_ACTIVE=true

# ===========================================
# PORTFOLIO SETTINGS
# ===========================================
# Risk allocation
MODERATE_ALLOCATION=0.70
AGGRESSIVE_ALLOCATION=0.30
